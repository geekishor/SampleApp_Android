<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/itemReviewUserImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logomusic" />

        <TextView
            android:id="@+id/itemReviewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/itemReviewUserImage"
            android:layout_toRightOf="@+id/itemReviewUserImage"
            android:fontFamily="monospace"
            android:text="fasfasfasfs"
            android:textAllCaps="true"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/itemReviewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2017-09-15 14:19:45"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/itemReviewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemReviewUserName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/itemReviewUserImage"
            android:layout_toRightOf="@+id/itemReviewUserImage"
            android:text="When introducing the composition to Lennon, McCartney assured him that he would  the line 'the movement you need is on your shoulder, reasoning that it's a stupid expression; it sounds like a parrot. Lennon replied:" />

    </RelativeLayout>


</android.support.v7.widget.CardView>