<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:elevation="3dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"

            android:id="@+id/product_image"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/logomusic" />

        <TextView
            android:id="@+id/product_title"
            android:layout_below="@id/product_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/product_title_padding"
            android:paddingRight="@dimen/product_title_padding"
            android:paddingTop="@dimen/product_title_padding"
            android:textColor="#4c4c4c"
            android:textSize="15dp"
            android:layout_toLeftOf="@+id/overflow"
            android:layout_toStartOf="@+id/overflow" />

        <TextView
            android:id="@+id/product_price"
            android:layout_below="@+id/product_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/overflow"
            android:layout_toStartOf="@+id/overflow" />

        <ImageView
            android:id="@+id/overflow"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_image"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots" />
    </RelativeLayout>
</android.support.v7.widget.CardView>


